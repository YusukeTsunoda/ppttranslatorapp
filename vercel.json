{
  "version": 2,
  "framework": "nextjs",
  "regions": ["hnd1"],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://${VERCEL_URL}/api",
    "SHARP_IGNORE_GLOBAL_LIBVIPS": "1"
  },
  "build": {
    "env": {
      "PRISMA_CLIENT_ENGINE_TYPE": "library",
      "SKIP_PRISMA_BINARY_ENGINE": "true",
      "SHARP_IGNORE_GLOBAL_LIBVIPS": "1"
    }
  },
  "functions": {
    "app/api/pptx/**/*.ts": {
      "memory": 1024,
      "maxDuration": 30
    },
    "app/api/slides/**/*.ts": {
      "memory": 1024,
      "maxDuration": 30
    },
    "app/api/translate/**/*.ts": {
      "memory": 1024,
      "maxDuration": 30
    },
    "app/api/auth/**/*.ts": {
      "memory": 512,
      "maxDuration": 10
    },
    "app/api/history/**/*.ts": {
      "memory": 512,
      "maxDuration": 10
    },
    "app/api/activity/**/*.ts": {
      "memory": 512,
      "maxDuration": 10
    },
    "app/api/**/*.ts": {
      "memory": 512,
      "maxDuration": 10
    },
    "app/api/**/*.js": {
      "memory": 512,
      "maxDuration": 10
    }
  }
} 