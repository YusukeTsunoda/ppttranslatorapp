{
  "title": "インフラストラクチャ状態ダッシュボード",
  "description": "PPTXTranslatorのインフラストラクチャリソースとサービス状態を監視するためのダッシュボード",
  "timezone": "Asia/Tokyo",
  "refresh": "1m",
  "panels": [
    {
      "title": "サービス稼働状況",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "query": "up{job=\"ppttranslator\"}",
          "legendFormat": "アプリケーション"
        },
        {
          "query": "up{job=\"database\"}",
          "legendFormat": "データベース"
        },
        {
          "query": "up{job=\"redis\"}",
          "legendFormat": "Redis"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto",
        "thresholds": {
          "mode": "absolute",
          "steps": [
            { "color": "red", "value": null },
            { "color": "green", "value": 1 }
          ]
        }
      }
    },
    {
      "title": "サーバーCPU使用率",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "query": "100 - (avg by (instance) (irate(node_cpu_seconds_total{job=\"node\", mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "{{instance}}"
        }
      ],
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "viz": false
            },
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": true,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "area"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          },
          "unit": "percent"
        }
      }
    },
    {
      "title": "サーバーメモリ使用率",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "query": "100 * (1 - ((node_memory_MemFree_bytes{job=\"node\"} + node_memory_Cached_bytes{job=\"node\"} + node_memory_Buffers_bytes{job=\"node\"}) / node_memory_MemTotal_bytes{job=\"node\"}))",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "viz": false
            },
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": true,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "area"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          },
          "unit": "percent"
        }
      }
    },
    {
      "title": "ディスク使用率",
      "type": "gauge",
      "datasource": "Prometheus",
      "targets": [
        {
          "query": "100 - ((node_filesystem_avail_bytes{job=\"node\", mountpoint=\"/\"} * 100) / node_filesystem_size_bytes{job=\"node\", mountpoint=\"/\"})",
          "legendFormat": "{{instance}} - {{mountpoint}}"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "horizontal",
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "thresholds": {
          "mode": "absolute",
          "steps": [
            { "color": "green", "value": null },
            { "color": "yellow", "value": 75 },
            { "color": "red", "value": 90 }
          ]
        }
      }
    },
    {
      "title": "データベース接続数",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "query": "pg_stat_activity_count{job=\"database\"}",
          "legendFormat": "接続数"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "viz": false
            },
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": true,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "area"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      }
    },
    {
      "title": "デプロイ履歴",
      "type": "table",
      "datasource": "Prometheus",
      "targets": [
        {
          "query": "deployment_info{job=\"ppttranslator\"}",
          "format": "table",
          "instant": true
        }
      ],
      "options": {
        "showHeader": true,
        "footer": {
          "show": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "timestamp"
            },
            "properties": [
              {
                "id": "custom.width",
                "value": 200
              }
            ]
          }
        ]
      }
    },
    {
      "title": "ネットワークトラフィック",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "query": "rate(node_network_receive_bytes_total{job=\"node\", device!=\"lo\"}[5m])",
          "legendFormat": "{{instance}} - 受信"
        },
        {
          "query": "rate(node_network_transmit_bytes_total{job=\"node\", device!=\"lo\"}[5m])",
          "legendFormat": "{{instance}} - 送信"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "viz": false
            },
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": true,
            "stacking": {
              "group": "A",
              "mode": "none"
            }
          },
          "unit": "bytes"
        }
      }
    }
  ],
  "links": [
    {
      "title": "Vercelダッシュボード",
      "url": "https://vercel.com/dashboard"
    },
    {
      "title": "PostgreSQLダッシュボード",
      "url": "https://supabase.com/dashboard/project/${SUPABASE_PROJECT_ID}"
    }
  ]
}
